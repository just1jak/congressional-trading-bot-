# Broker API Credentials
# Copy this file to credentials.yaml and fill in your actual credentials
# DO NOT commit credentials.yaml to version control

broker:
  # Schwab API
  schwab:
    api_key: "your_api_key_here"
    api_secret: "your_api_secret_here"
    account_number: "your_account_number"
    redirect_uri: "https://localhost:8080"  # OAuth redirect

  # TD Ameritrade (being deprecated)
  tda:
    api_key: "your_tda_api_key"
    account_number: "your_account_number"
    redirect_uri: "https://localhost:8080"

  # Alpaca (good for paper trading)
  alpaca:
    api_key: "your_alpaca_key"
    api_secret: "your_alpaca_secret"
    base_url: "https://paper-api.alpaca.markets"  # Paper trading URL

# Data Source APIs
data_sources:
  senate_stock_watcher:
    api_key: "your_api_key_if_required"
    base_url: "https://senatestockwatcher.com/api"

  capitol_trades:
    api_key: "your_api_key_if_required"
    base_url: "https://www.capitoltrades.com/api"

# Database
database:
  url: "sqlite:///data/congressional_trades.db"
  # For PostgreSQL:
  # url: "postgresql://user:password@localhost:5432/congressional_trades"
